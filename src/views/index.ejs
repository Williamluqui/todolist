<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/js/bootstrap.min.js">
    <link rel="stylesheet" href="./css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://mdbcdn.b-cdn.net/wp-content/themes/mdbootstrap4/docs-app/css/dist/mdb5/standard/core.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <title>ToDoList</title>
</head>
<body>

  <!-- NAVABAR-->
    <header>
    <nav class="navbar navbar-light navbar-expand-md border rounded shadow-sm">
        <div class="container mobile-profile">
          <a class="navbar-brand " href="#">
            <img src="./images/logo.png">
          </a>
          <ul>
            
            <li class="nav-item dropdown">
                <a class=" dropdown-toggle " href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                 <span>Username</span> 
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                  <li><a class="dropdown-item" href="#">Perfil</a></li>
                  <li><a class="dropdown-item" href="#">Sair</a></li>
                  
                </ul>
              </li>
        </div>
      </nav>
    </header>
    <!-- CONTEUDO -->
    <section class="vh-100">
        <div class="container py-4 h-75">
          <div class="row d-flex justify-content-center align-items-center h-75 ">
            <div class="col">
              <div class="card " id="list1" style="border-radius: .75rem; background-color: #f5f5f5;">
                <div class="card-body py-4  px-md-4">
      
                  <p class="h1 text-center mt-3 mb-4 pb-3 text-primary">
                    <i class="fas fa-check-square me-1"></i>
                    <u> ToDoList </u>
                  </p>
                  <form action="/savelist" method="POST">
                  <div class="pb-1">
                    <div class="card">
                      <div class="card-body">
                        <div class="d-flex flex-row align-items-center ">
                          <input type="text" name="body" class="form-control form-control-lm text-break" id="exampleFormControlInput1"
                            placeholder="Add new...">
                         
                          <div>
                            <button type="submit" class="btn btn-primary">Adicionar</button>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </form>
                  <hr class="my-4">
      
                  <div class="d-flex justify-content-end align-items-center mb-4 pt-2 pb-3">
                    <p class="small mb-0 me-2 text-muted">Filtro</p>
                    <select class="form-select w-auto " >
                      <option value="1">Todos</option>
                      <option value="2">Completado</option>
                      <option value="3">Ativo</option>
                      
                    </select>
                    <p class="small mb-0 ms-4 me-2 text-muted">Ordenar</p>
                    <select class="form-select w-auto ">
                      <option value="1">Recentes</option>
                      <option value="2">Antigos</option>
                    </select>
                    <a href="#!" style="color: #23af89;" data-mdb-toggle="tooltip" title="Ascending"><i
                        class="fas fa-sort-amount-down-alt ms-2"></i></a>
                  </div> 
                  
                  
                  <!-- img para tarefas vazias  -->
                  <% if(findList.length == 0){%> 
                    
                      <div class="image col-md-9 text-center ">
                      <img src="./images/astronaut.svg" >
                    </div>
                    <div class="text-center"><%=message%> 
                    </div>
                  <% } else{%>
                  <%findList.forEach(list => {%> 
                  
                 <!-- CONTEUDO DA LISTA --> 
                
                  <ul class="list-group list-group-horizontal rounded-0 bg-transparent">
                    <li
                      class="list-group-item d-flex align-items-center ps-0 pe-3 py-1 rounded-0 border-0 bg-transparent">
                      <div class="form-check">
                        <input class="form-check-input me-0" type="checkbox" value="" id="flexCheckChecked1"
                          aria-label="..." checked />
                      </div>
                    </li>
                    <li
                      class="list-group-item px-3 py-1 d-flex align-items-center flex-grow-1 border-0 bg-transparent">
                      <p class="lead fw-normal mb-0 text-md-start"><%=list.body%></p>
                    </li>
                    
                    <li class="list-group-item ps-3 pe-0 py-1 rounded-0 border-0 bg-transparent">
                      <div class="d-flex flex-row justify-content-end mb-1">
                        <a href="#!" class="text-info" data-mdb-toggle="tooltip" title="Editar"><i
                            class="fas fa-pencil-alt me-3"></i></a>
                        <a href="#!" class="text-danger" data-mdb-toggle="tooltip" title="Deletar"><i
                            class="fas fa-trash-alt"></i></a>
                      </div>

                      <div class="text-end text-muted">
                        <a href="#!" class="text-muted" data-mdb-toggle="tooltip" title="Data de criação">
                          <%const date = { weekday: 'long', year: 'numeric', month: 'long', day: '2-digit'}%>
                          <p class="small mb-0"><i class="fas fa-info-circle me-2"></i><%=list.created_at.toLocaleString('pt-br',date)%></p>
                        </a>
                      </div>
                      

                    </li>
                    </ul>   
                    <%  }); %> 
                    <%  } %> 
                    <!-- 
                      PROXIMO CONTEUDO INSERIR AQUI
                                  
                    -->              
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
    
  </section>

      
</body>
<script src="./js/jquery.min.js"></script>
<script src="./js/bootstrap.min.js"></script>
<script src="./js/bs-init.js"></script>
<script
  type="text/javascript"
  src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.4.0/mdb.min.js"
></script>
</html>